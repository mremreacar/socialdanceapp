{
  "expo": {
    "name": "socialdance-mobile",
    "slug": "socialdance-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.socialdancemobile",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Profil fotoğrafı seçmek için galerinize erişmemize izin verin.",
        "NSLocationWhenInUseUsageDescription": "Çevrenizdeki dans etkinliklerini gösterebilmek için konumunuza erişmemize izin verin."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.socialdancemobile",
      "permissions": [
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "softwareKeyboardLayoutMode": "resize"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Profil fotoğrafı seçmek için galerinize erişmemize izin verin."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Çevrenizdeki dans etkinliklerini gösterebilmek için konumunuza erişmemize izin verin."
        }
      ],
      "expo-notifications"
    ]
  }
}